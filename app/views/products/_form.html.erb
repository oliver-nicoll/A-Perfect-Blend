
<%= render 'errors' %>

<%= form_with(model: @product) do |f| %>
    <%= f.label :image %>
    <%= f.text_field :image %><br>
    <%= f.label :category %>
    <%= f.text_field :category %><br>
    <%= f.label :product_name %>
    <%= f.text_field :product_name %><br>
    <%= f.label :product_description %>
    <%= f.text_field :product_description %><br>
    <%= f.label :instock %>
    <%= f.number_field :instock, in: 1.0..200.0, step: 1.0 %><br>
    <%= f.label :sold_at %>
    <%= f.number_field :sold_at, in: 1.0..200.0, step: 0.01 %><br>
    <%= f.submit 'Create Product' %>
<% end %>