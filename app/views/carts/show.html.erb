<h1> Show Cart </h1>
<details class= "shopping-cart">
        <summary> Shopping Cart </summary>
          <div>
            <%= link_to 'Keep Shopping', products_path, class: 'shoping cart button' %>
            </div>
            <section>
              <%= render(@cart.cart_products) %>
            <div class: 'columns'>
              <div class: 'column'>
                  <%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: 'Are you sure?'} %>
              </div>
          <h4>
           <span>Total:</span> <%= number_to_currency(@cart.total_price) %>
           </h4>
          </section>
  </details>