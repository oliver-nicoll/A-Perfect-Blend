

    <h1> Show Cart </h1>
<details class= "shopping-cart">
        <summary> Shopping Cart </summary>
          <div>
            <%= link_to 'Keep Shopping', products_path, class: 'shoping cart button' %>
            </div>
            <section>
              <%= render(partial: "cart_products/cart_products", locals: { cart: @cart } ) %>
            <div class: 'columns'>
              <div class: 'column'>
                  <%= button_to 'Empty Cart', @all_products, method: :delete, data: { confirm: 'Are you sure?'} %>
              </div>
          <h4>
           <span>Total:</span> <%= number_to_currency(@all_products.subtotal_cart) %>
           </h4>
          </section>
  </details>